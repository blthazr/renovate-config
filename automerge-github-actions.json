{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Auto merge GitHub Actions",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchManagers": ["github-actions"],
      "matchDatasources": ["github-tags"],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    }
  ]
}
