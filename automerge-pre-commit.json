{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "branch",
      "description": "Auto-merge pre-commit (patch, minor)",
      "matchManagers": ["pre-commit"],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    }
  ]
}
