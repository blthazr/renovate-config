{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Auto merge Terraform providers",
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchDatasources": [
        "terraform-provider"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    }
  ]
}
