{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "addLabels": ["action/automerge"],
      "automerge": true,
      "automergeType": "branch",
      "description": ["Auto-merge Terraform providers (patch, minor)"],
      "matchDatasources": ["terraform-provider"],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    }
  ]
}
